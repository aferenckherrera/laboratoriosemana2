@model Producto
<form asp-asp-controller="Producto" asp-action="Excute">
    <label asp-for="nombreproducto" class="control-label"></label>
    <input asp-for="nombreproducto" class="form-control"/>

    <label asp-for="precio" class="control-label"></label>
    <input asp-for="precio" class="form-control"/>

    <label asp-for="cantidad" class="control-label"></label>
    <input asp-for="cantidad" class="form-control"/>
    <div class="form-group">
        <label asp-for="accion" class="control-label"></label>
        <select asp-for="accion">
            <option value="Comprar">Comprar</option>
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Comprar</button>
    </div>
</form>
<h1>@ViewData["Message"]</h1>

